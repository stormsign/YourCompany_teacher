<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundcolor_common"
    android:orientation="vertical"
    android:elevation="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        >

        <com.miuhouse.yourcompany.teacher.view.widget.CircularImageViewHome
            android:id="@+id/img_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/img_avatar"
            android:text="姓名"
            android:textColor="@color/textDarktwo"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/img_avatar"
            android:text="12-12 12:30"
            android:textColor="@color/textDarkthree"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="陪伴"
            android:textColor="@color/textDarkone"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_avatar"
            android:layout_marginTop="10dp"
            android:text="你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，你好啊，"
            android:textColor="@color/textDarkone"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>
</LinearLayout>