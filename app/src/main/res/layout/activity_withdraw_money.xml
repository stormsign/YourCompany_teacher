<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor_common"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_withdraw_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selectable_item_background">

        <TextView
            style="@style/user_info_text"
            android:layout_alignParentLeft="true"
            android:text="提现帐户" />

        <TextView
            android:id="@+id/tv_account"
            style="@style/user_info_text_v"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_schollage"
            android:maxLength="30" />

        <ImageView
            android:id="@+id/img_schollage"
            style="@style/user_info_imageview" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额"
            android:textColor="@color/textDarktwo"
            android:textSize="@dimen/text_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/tixian_ico_qian" />

            <EditText
                android:id="@+id/et_withdraw_money"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:background="@null"
                android:hint="00.00"
                android:numeric="decimal"
                android:textColor="@color/textDarkone"
                android:textColorHint="@color/textDarktwo"
                android:textSize="19sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/selectable_item_background"
        android:elevation="1dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="全部金额98.00元"
            android:textColor="@color/textDarktwo"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/tv_all_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/tv_title"
            android:gravity="center"
            android:maxLength="30"
            android:text="全部提现"
            android:textColor="@color/textBlue"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_withdraw_money"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_ordermanage"
        android:enabled="true"
        android:text="提现"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_17" />
</LinearLayout>
