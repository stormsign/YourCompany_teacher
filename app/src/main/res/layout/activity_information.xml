<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor_common"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:id="@+id/relative_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        style="@style/user_info_text_v"
                        android:layout_alignParentLeft="true"
                        android:text="用户头像" />

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relative_nicename"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/linear_60dp">


                        <TextView
                            style="@style/user_info_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="12dp"
                            android:text="姓名" />

                        <TextView
                            android:id="@+id/tv_nicename"
                            style="@style/user_info_text_v"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/img_nicename" />

                        <ImageView
                            android:id="@+id/img_nicename"
                            style="@style/user_info_imageview" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/view_line" />

                    <RelativeLayout
                        android:id="@+id/relative_sex"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/linear_60dp">


                        <TextView
                            style="@style/user_info_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="12dp"
                            android:text="性别" />

                        <TextView
                            android:id="@+id/tv_sex"
                            style="@style/user_info_text_v"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/img_sex" />

                        <ImageView
                            android:id="@+id/img_sex"
                            style="@style/user_info_imageview" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/view_line" />

                    <RelativeLayout
                        android:id="@+id/relative_schollage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/linear_60dp">

                        <TextView
                            style="@style/user_info_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="12dp"
                            android:text="上课类型" />

                        <TextView
                            android:id="@+id/tv_schollage"
                            style="@style/user_info_text_v"
                            android:layout_marginRight="10dp"

                            android:layout_toLeftOf="@+id/img_schollage" />

                        <ImageView
                            android:id="@+id/img_schollage"
                            style="@style/user_info_imageview" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relative_school"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/linear_60dp">


                        <TextView
                            style="@style/user_info_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="12dp"
                            android:text="年级" />

                        <TextView
                            android:id="@+id/tv_school"
                            style="@style/user_info_text_v"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/img_school" />

                        <ImageView
                            android:id="@+id/img_school"
                            style="@style/user_info_imageview" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/view_line" />

                    <RelativeLayout
                        android:id="@+id/relative_education"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/linear_60dp">


                        <TextView
                            style="@style/user_info_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="12dp"
                            android:text="学历" />

                        <TextView
                            android:id="@+id/tv_education"
                            style="@style/user_info_text_v"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/img_education" />

                        <ImageView
                            android:id="@+id/img_education"
                            style="@style/user_info_imageview" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/view_line" />

                    <RelativeLayout
                        android:id="@+id/relative_university"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/linear_60dp">


                        <TextView
                            style="@style/user_info_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="12dp"

                            android:text="院校" />

                        <TextView
                            android:id="@+id/tv_university"
                            style="@style/user_info_text_v"
                            android:layout_marginRight="10dp"

                            android:layout_toLeftOf="@+id/img_university" />

                        <ImageView
                            android:id="@+id/img_university"
                            style="@style/user_info_imageview" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/view_line" />

                    <RelativeLayout
                        android:id="@+id/relative_experience"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/linear_60dp">

                        <TextView
                            style="@style/user_info_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="12dp"

                            android:text="专业" />

                        <TextView
                            android:id="@+id/tv_experience"
                            style="@style/user_info_text_v"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/img_experience" />

                        <ImageView
                            android:id="@+id/img_experience"
                            style="@style/user_info_imageview" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_8"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">


                <RelativeLayout
                    android:id="@+id/relative_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linear_60dp">


                    <TextView
                        style="@style/user_info_text"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="12dp"
                        android:text="介绍" />

                    <TextView
                        android:id="@+id/tv_recomment"
                        style="@style/user_info_text_v"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/img_recomment" />

                    <ImageView
                        android:id="@+id/img_recomment"
                        style="@style/user_info_imageview" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:id="@+id/relative_images"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linear_60dp">

                    <TextView
                        style="@style/user_info_text"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="12dp"
                        android:text="照片" />

                    <TextView
                        android:id="@+id/tv_images"
                        style="@style/user_info_text_v"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/img_images" />

                    <ImageView
                        android:id="@+id/img_images"
                        style="@style/user_info_imageview" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>