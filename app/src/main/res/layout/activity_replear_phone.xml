<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor_common"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="当前手机号135****2341"
        android:textColor="@color/textDarkthree"
        android:textSize="@dimen/text_15" />

    <RelativeLayout
        android:id="@+id/relative_replace_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_45dp"
        android:background="@drawable/selectable_item_background"
        android:paddingLeft="10dp">


        <EditText
            android:id="@+id/et_replace_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="输入新的手机号"
            android:textColor="@color/textDarkone"
            android:textColorHint="@color/textDarkfour"
            android:textSize="@dimen/text_15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_45dp"
        android:background="@drawable/selectable_item_background"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="输入验证码"
            android:maxLength="30"
            android:phoneNumber="true"
            android:textColor="@color/textDarkone"
            android:textColorHint="@color/textDarkfour"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/tv_get_vcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="获取验证码"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/text_15" />
    </LinearLayout>
</LinearLayout>