<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="item_count" format="integer"></attr>
    <attr name="indicator_type" format="enum">
        <enum name="triangle" value="0"/>
        <enum name="rectangle" value="1"/>
    </attr>
    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" />
        <attr name="indicator_type" />
    </declare-styleable>
    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean"></attr>
        <attr name="border_width" format="dimension"></attr>
        <attr name="border_color" format="color"></attr>
        <attr name="shadow" format="boolean"></attr>
    </declare-styleable>
    <declare-styleable name="Theme">
        <attr name="circularImageViewStyle" format="reference"></attr>
    </declare-styleable>
</resources>