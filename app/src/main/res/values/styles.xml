<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/themeColor</item>
        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="toolbarStyle">@style/customtoolbar</item>
        <item name="colorAccent">@color/themeColor</item>
    </style>

    <style name="customtoolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="WelcomeHeadingAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/welcome_heading</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WelcomeContentAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/welcome_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!--<style name="DialogTransparent" parent="@android:style/Theme.AppCompat.Dialog">-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowIsFloating">false</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    <!--</style>-->
    <style name="TintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#ff9d08</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="user_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="user_info_text_v" parent="user_info_text">
        <item name="android:maxLength">12</item>
    </style>
    <style name="user_info_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/list_ico_jiantou</item>
        <item name="android:layout_marginRight">@dimen/sidebar_text_size</item>
    </style>
</resources>
